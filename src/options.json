{
  "title": "Sass Loader options",
  "type": "object",
  "properties": {
    "implementation": {
      "description": "The implementation of the sass to be used (https://github.com/futuri/liquid-loader#implementation).",
      "type": "object"
    },
    "sassOptions": {
      "description": "Options for `node-sass` or `sass` (`Dart Sass`) implementation. (https://github.com/futuri/liquid-loader#implementation).",
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": true
        },
        {
          "instanceof": "Function"
        }
      ]
    },
    "additionalData": {
      "description": "Prepends/Appends `Sass`/`SCSS` code before the actual entry file (https://github.com/futuri/liquid-loader#additionaldata).",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "instanceof": "Function"
        }
      ]
    },
    "sourceMap": {
      "description": "Enables/Disables generation of source maps (https://github.com/futuri/liquid-loader#sourcemap).",
      "type": "boolean"
    },
    "webpackImporter": {
      "description": "Enables/Disables default `webpack` importer (https://github.com/futuri/liquid-loader#webpackimporter).",
      "type": "boolean"
    },
    "settingsData": {
      "description": "Get setting_data.json.",
      "type": "string"
    }
  },
  "additionalProperties": false
}
